<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/collage_96"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/manageviewdialogtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Add New Screen or Class"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />
        </LinearLayout>
        <TextView
            android:text="Select Type"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/color_control_normal"
            android:layout_margin="6dp"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manageviewselector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:padding="8dp"
            android:orientation="horizontal" />
        <EditText
            android:id="@+id/edittext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textColorHint="#607D8B" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/color_control_normal"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/manageviewcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/manageviewsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="   Add "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
